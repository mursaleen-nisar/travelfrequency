<%- include('partials/header') %>

    <main>
        <!-- Hero Section -->
        <section class="hero-container bg-cover bg-center h-screen"">
            <div class="flex items-center justify-left h-full bg-gray-900 bg-opacity-30">
                <div class="hero-content ml-5 sm:m-12 md:m-20 lg:m-32 p-4 sm:p-8 border-l-8 border-blue-200 rounded-md w-full md:w-3/4 lg:w-2/3 overflow-hidden">
                    <h1 class="text-4xl lg:text-5xl font-bold text-white mb-3 md:mb-5">Explore Kashmir with Us</h1>
                    <p class="text-lg lg:text-xl text-white mb-12 leading-6">Explore the hidden gems and breathtaking valleys of Kashmir with our exclusive tour packages. Experience the beauty of this paradise on Earth. Book your unforgettable Kashmir tour with us today!</p>
                    <a href="/contact" class="py-3 px-5 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-500 transition-colors">Contact Us</a>
                </div>
            </div>
        </section>

        <!-- Tours & Packages Section -->
        <section id="tours" class="py-24 min-h-[95vh] scroll-mt-5">
            <div class="max-w-6xl mx-auto px-4">
                <div class="text-center mb-12">
                    <h2>Tours & Packages</h2>
                    <p class="text-gray-700 mt-2"><span>Explore our exclusive tour packages</span></p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mx-4 place-items-center">
                    <!-- Package 1 -->
                    <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow">
                        <a href="/cards/kashmirtour-1-info">
                            <div class="img-container h-60 w-full overflow-hidden rounded-t-lg">
                                <img class="object-cover object-center w-full h-full" src="/images/card-1.jpg" alt="card image" />
                            </div>
                        </a>
                        <div class="px-5 pb-5 pt-2">
                            <small class="text-gray-700">5 Nights 6 Days</small>
                            <a href="/cards/kashmirtour-1-info">
                                <h5 class="my-3 text-xl font-bold tracking-tight text-gray-900">Lost In Love: A Romantic Escapade To The Enchanting Kashmir Valley</h5>
                            </a>
                            <h4 class="text-xl md:text-2xl font-medium mb-2 text-gray-600">₹ 21,499 <small class="text-gray-600">/ Person</small></h4>
                            <a href="/cards/kashmirtour-1-info" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                                Read more
                                 <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                    <!-- Package 2 -->
                    <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow">
                        <a href="/cards/kashmirtour-2-info">
                            <div class="img-container h-60 w-full overflow-hidden rounded-t-lg">
                                <img class="object-cover object-center w-full h-full" src="/images/card-2.jpg" alt="card image" />
                            </div>
                        </a>
                        <div class="px-5 pb-5 pt-2">
                            <small class="text-gray-700">4 Nights 5 Days</small>
                            <a href="/cards/kashmirtour-2-info">
                                <h5 class="my-3 text-xl font-bold tracking-tight text-gray-900">Discover The Magic Of Kashmir: A Memorable Family Getaway</h5>
                            </a>
                            <h4 class="text-xl md:text-2xl font-medium mb-2 text-gray-600">₹ 18,499 <small class="text-gray-600">/ Person</small></h4>
                            <a href="/cards/kashmirtour-2-info" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                                Read more
                                 <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                    <!-- Package 3 -->
                    <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow">
                        <a href="/cards/kashmirtour-3-info">
                            <div class="img-container h-60 w-full overflow-hidden rounded-t-lg">
                                <img class="object-cover object-center w-full h-full" src="/images/card-3.jpg" alt="card image" />
                            </div>
                        </a>
                        <div class="px-5 pb-5 pt-2">
                            <small class="text-gray-700">5 Nights 6 Days</small>
                            <a href="/cards/kashmirtour-3-info">
                                <h5 class="my-3 text-xl font-bold tracking-tight text-gray-900">Group Tour Package For Adventure And Culture Enthusiasts</h5>
                            </a>
                            <h4 class="text-xl md:text-2xl font-medium mb-2 text-gray-600">₹ 21,499 <small class="text-gray-600">/ Person</small></h4>
                            <a href="/cards/kashmirtour-3-info" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                                Read more
                                 <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                                </svg>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <!-- Our Services Section -->
        <section id="services" class="bg-gray-100 py-20">
            <div class="max-w-6xl mx-auto px-4">
                <div class="text-center mb-12">
                    <h2>Our Services</h2>
                    <p class="text-gray-700 mt-2"><span>We offer a variety of travel services to cater to your needs</span></p>
                </div>
                <div class="flex flex-wrap">
                    <div class="w-full md:w-1/3 px-4 mb-8">
                        <div class="bg-white rounded-xl shadow-lg p-6 md:min-h-[21rem] lg:min-h-64">
                            <div class="mb-4">
                                <i class="ri-taxi-fill text-5xl text-blue-500"></i>
                            </div>
                            <h3 class="text-2xl font-bold mb-4">Personalized Tours</h3>
                            <p class="text-gray-700">We create personalized tour packages tailored to your preferences and budget.</p>
                        </div>
                    </div>
                    <div class="w-full md:w-1/3 px-4 mb-8">
                        <div class="bg-white rounded-xl shadow-lg p-6 md:min-h-[21rem] lg:min-h-64">
                            <div class="mb-4">
                                <i class="ri-flight-takeoff-fill text-5xl text-blue-500"></i>
                            </div>
                            <h3 class="text-2xl font-bold mb-4">Flight Booking</h3>
                            <p class="text-gray-700">We offer flight booking services to help you reach your destination comfortably and affordably.</p>
                        </div>
                    </div>
                    <div class="w-full md:w-1/3 px-4 mb-8">
                        <div class="bg-white rounded-xl shadow-lg p-6 md:min-h-[21rem] lg:min-h-64">
                            <div class="mb-4">
                                <i class="ri-hotel-fill text-5xl text-blue-500"></i>
                            </div>
                            <h3 class="text-2xl font-bold mb-4">Hotel Reservations</h3>
                            <p class="text-gray-700">We provide hotel reservation services to ensure you have a comfortable stay during your trip.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Choose Us Section -->
        <section id="why-choose-us" class="py-20 bg-white">
            <div class="max-w-6xl mx-auto px-4">
                <div class="text-center mb-12">
                    <h2>Why Choose Us</h2>
                    <p class="text-gray-700 mt-2"><span>Discover the reasons why we are the best choice for your travel needs</span></p>
                </div>
                <div class="flex flex-wrap">
                    <div class="w-full md:w-1/3 px-4 mb-8">
                        <div class="bg-gray-100 rounded-xl shadow-lg p-6 text-center md:min-h-[22.5rem] lg:min-h-72 xl:min-h-fit flex flex-col justify-center">
                            <div class="mb-4">
                                <i class="ri-search-line text-5xl text-blue-500 mx-auto"></i>
                            </div>
                            <h3 class="text-2xl font-bold mb-4">Local Insights</h3>
                            <p class="text-gray-700">Get insider tips and discover hidden gems with our extensive local expertise and insights.</p>
                        </div>
                    </div>
                    <div class="w-full md:w-1/3 px-4 mb-8">
                        <div class="bg-gray-100 rounded-xl shadow-lg p-6 text-center md:min-h-[22.5rem] lg:min-h-72 xl:min-h-fit flex flex-col justify-center">
                            <div class="mb-4">
                                <i class="ri-money-rupee-circle-fill text-5xl text-blue-500 mx-auto"></i>
                            </div>
                            <h3 class="text-2xl font-bold mb-4">Affordable Pricing</h3>
                            <p class="text-gray-700">We offer competitive pricing without compromising on quality, ensuring great value for your money.</p>
                        </div>
                    </div>
                    <div class="w-full md:w-1/3 px-4 mb-8">
                        <div class="bg-gray-100 rounded-xl shadow-lg p-6 text-center md:min-h-[22.5rem] lg:min-h-72 xl:min-h-fit flex flex-col justify-center">
                            <div class="mb-4">
                                <i class="ri-thumb-up-fill text-5xl text-blue-500 mx-auto"></i>
                            </div>
                            <h3 class="text-2xl font-bold mb-4">Customer Satisfaction</h3>
                            <p class="text-gray-700">We prioritize customer satisfaction, ensuring a hassle-free and enjoyable travel experience.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Popular Destinations Section -->
        <section id="destinations" class="py-20">
            <div class="max-w-6xl mx-auto px-4">
                <div class="text-center mb-12">
                    <h2>Popular Destinations</h2>
                    <p class="text-gray-700 mt-2"><span>Explore our most popular travel destinations</span></p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-8">
                    <div class="bg-white rounded shadow-lg overflow-hidden mx-4">
                        <img src="/images/Gulmarg.jpg" alt="Gulmarg" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-2xl font-bold mb-4">Gulmarg, Kashmir</h3>
                            <p class="text-gray-700">Gulmarg is a scenic paradise nestled amidst Kashmir's stunning mountains.</p>
                        </div>
                    </div>
                    <div class="bg-white rounded shadow-lg overflow-hidden mx-4">
                        <img src="/images/Srinagar.jpg" alt="Srinagar" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-2xl font-bold mb-4">Srinagar, Kashmir</h3>
                            <p class="text-gray-700">Srinagar, the cultural hub of Kashmir, known for its historical landmarks.</p>
                        </div>
                    </div>
                    <div class="bg-white rounded shadow-lg overflow-hidden mx-4">
                        <img src="/images/Pahalgam.jpg" alt="Pahalgam" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-2xl font-bold mb-4">Pahalgam, Kashmir</h3>
                            <p class="text-gray-700">Pahalgam is a tranquil paradise amidst Kashmir's stunning natural beauty.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section id="testimonials" class="bg-gray-100 py-20 scroll-mt-7 md:scroll-mt-12">
            <div class="swiper max-w-6xl mx-auto px-4">
                <div class="text-center mb-16">
                    <h2>Testimonials</h2>
                    <p class="text-gray-700 mt-2"><span>Hear from our happy clients</span></p>
                </div>
                
                <div class="swiper-wrapper">
                    
                    <!-- Slide 1 -->
                    <% if(testimonials.length > 0) { %>
                        <% testimonials.forEach((testimonial) => { %>
                            <div class="swiper-slide px-4 sm:px-16 overflow-hidden min-h-[40vw] sm:min-h-[20vw] flex flex-col items-center gap-12">
                                <div class="img-container bg-yellow-500 h-[14vw] w-[14vw] sm:h-[11vw] sm:w-[11vw] md:h-[8vw] md:w-[8vw] rounded-full overflow-hidden">
                                    <img src="data:image/jpeg;base64,<%= testimonial.client_image.toString('base64') %>" alt="Customer Image" class="h-full w-full object-cover">
                                </div>
                                <div class="review">
                                    <p><%= testimonial.client_testimonial %></p>
                                </div>
                                <div class="name">
                                    <h2 class="text-2xl font-medium mb-5">~<%= testimonial.client_name %></h2>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="swiper-slide px-4 sm:px-16 overflow-hidden min-h-[20vw] flex flex-col items-center justify-center text-gray-600">
                            
                            <div class="review">
                                <p>No testimonials available.</p>
                            </div>
                        
                        </div>
                    <% } %>

                </div>

                <!-- Swiper Pagination -->
                <div class="swiper-pagination"></div>

                <!-- Swiper Navigation buttons -->
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>

            </div>
        </section>

        <!-- Seasonal Highlights Section -->
        <section id="seasonal-highlights" class="py-20 ">
            <div class="max-w-6xl mx-auto px-4">
                <div class="text-center mb-16">
                    <h2>Seasonal Highlights in Kashmir</h2>
                    <p class="text-gray-700 mt-2"><span>Discover the beauty of Kashmir in every season</span></p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mx-4">
                    <!-- Spring Card -->
                    <div class="bg-white rounded shadow-lg overflow-hidden">
                        <img src="/images/Spring.jpg" alt="Spring in Kashmir" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h3 class="text-xl font-bold text-center">Spring</h3>
                        </div>
                    </div>
                    <!-- Summer Card -->
                    <div class="bg-white rounded shadow-lg overflow-hidden">
                        <img src="/images/Summer.jpg" alt="Summer in Kashmir" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h3 class="text-xl font-bold text-center">Summer</h3>
                        </div>
                    </div>
                    <!-- Autumn Card -->
                    <div class="bg-white rounded shadow-lg overflow-hidden">
                        <img src="/images/Autumn.jpg" alt="Autumn in Kashmir" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h3 class="text-xl font-bold text-center">Autumn</h3>
                        </div>
                    </div>
                    <!-- Winter Card -->
                    <div class="bg-white rounded shadow-lg overflow-hidden">
                        <img src="/images/Winter.jpg" alt="Winter in Kashmir" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h3 class="text-xl font-bold text-center">Winter</h3>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="pt-20 mb-10 md:mb-0 scroll-mt-10">
            <div class="max-w-6xl mx-auto px-4">
                <div class="text-center mb-12">
                    <h2>Get a Free Quote</h2>
                    <p class="text-gray-700 mt-2"><span>Get in touch with us to plan your next trip</span></p>
                </div>
                <div class="w-full max-w-lg mx-auto">
                    <form action="/get-quote" method="post" class="mx-3">
                        <div class="mb-4">
                            <label for="name" class="block text-gray-700 font-bold mb-2">Full Name</label>
                            <input type="text" id="name" name="full_name" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Your full name" required>
                        </div>
                        <div class="mb-4">
                            <label for="phone" class="block text-gray-700 font-bold mb-2">Phone Number</label>
                            <input type="tel" id="phone" name="phone_number" pattern="[0-9]{10}" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Your phone number" required>
                        </div>
                        <div class="mb-4">
                            <label for="email" class="block text-gray-700 font-bold mb-2">Email ID</label>
                            <input type="email" id="email" name="email" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Your email ID (Optional)">
                        </div>
                        <div class="mb-4">
                            <label for="date" class="block text-gray-700 font-bold mb-2">Expected Journey Date</label>
                            <input type="date" id="date" name="journey_date" min="<%= today %>" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Your message">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="py-2 px-4 mt-6 bg-blue-500 text-white rounded hover:bg-blue-400 w-full">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

<%- include('partials/footer') %>